{
  "name": "@brb-ui/system",
  "description": "BRB UI Design System",
  "version": "0.0.7",
  "license": "MIT",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "keywords": [
    "system",
    "css-in-js",
    "emotion",
    "ui-component",
    "ui",
    "brb",
    "style-props",
    "design-system"
  ],
  "author": "Hippo <hippowuyufan@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brb-tech/brb-ui.git",
    "directory": "packages/system"
  },
  "homepage": "https://github.com/brb-tech/brb-ui#readme",
  "bugs": {
    "url": "https://github.com/brb-tech/brb-ui/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf dist && rm -rf build && rm -rf node_modules",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "@brb-ui/hooks": "workspace:*",
    "@brb-ui/utils": "workspace:*",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "cookie": "^0.5.0",
    "js-cookie": "^3.0.5",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@types/cookie": "^0.5.2",
    "@types/js-cookie": "^3.0.4",
    "@types/lodash.merge": "^4.6.7",
    "@types/react": "^18.2.0",
    "clean-package": "^2.2.0",
    "react": "^18.2.0",
    "tsup": "^7.2.0"
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "react": ">=18"
  },
  "tsup": {
    "format": [
      "cjs",
      "esm"
    ],
    "target": "es2019",
    "clean": true,
    "sourcemap": true
  },
  "publishConfig": {
    "access": "public"
  },
  "clean-package": "./clean-package.config.json"
}
